<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <log4net>
        <root>
            <level value="ALL" />
        </root>
        <logger name="ApplicationLogger">
            <level value="All" />
            <appender-ref ref="ConsoleAppender" />
            <appender-ref ref="ApplicationAppender" />
        </logger>
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date %-5level %message%newline" />
            </layout>
        </appender>
        <appender name="ApplicationAppender" type="log4net.Appender.RollingFileAppender">
            <encoding value="utf-8" />
            <file value="Logs/" />
            <datePattern value="'Application.'yyyy-MM-dd HH'.txt'" />
            <appendToFile value="true" />
            <maximumFileSize value="20MB" />
            <maxSizeRollBackups value="100" />
            <staticLogFileName value="false" />
            <rollingStyle value="Composite" />
            <layout type="log4net.Layout.PatternLayout">
                <header type="log4net.Util.PatternString" value="[Application Start] %newline" />
                <footer type="log4net.Util.PatternString" value="[Application End] %newline" />
                <ConversionPattern value="%date %-5level %message%newline" />
            </layout>
        </appender>
    </log4net>
</configuration>